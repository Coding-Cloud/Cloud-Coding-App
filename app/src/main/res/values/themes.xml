<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CloudCodingApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Accent brand color. -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="materialButtonStyle">@style/DefaultButtonTheme</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
    </style>

    <style name="DefaultButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/DefaultButtonThemeButtonColor</item>
    </style>

    <style name="DefaultButtonThemeButtonColor">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorOnAccent</item>
    </style>

    <style name="DangerButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/DefaultButtonThemeButtonColor</item>
    </style>

    <style name="DangerButtonThemeButtonColor">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorOnAccent</item>
    </style>

    <!-- Tab layout style -->
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab"></style>
</resources>